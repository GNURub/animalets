---
import ServiceManager from '../../components/ServiceManager';
import AdminLayout from '../../layouts/AdminLayout.astro';

const { supabase } = Astro.locals;

// Obtener todos los servicios
const { data: services } = await supabase
  .from('services')
  .select('*')
  .order('name', { ascending: true });
---

<AdminLayout title='Gestión de Servicios'>
  <div class='mb-8'>
    <h1 class='text-3xl font-bold text-gray-900 mb-2'>Gestión de Servicios</h1>
    <p class='text-gray-600'>
      Administra los servicios de peluquería ofrecidos
    </p>
  </div>

  <ServiceManager client:load initialServices={services || []} />
</AdminLayout>
